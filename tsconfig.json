{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "ES2017",
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "strict": false,
        "resolveJsonModule": true,
    },
    "include": ["src/**/*"],
    "exclude": ["src/**/*.spec.*"]
}
